<%- layout("/layouts/boilerplate") %>

<body>
    <!-- Display search country if exists -->
    <% if (searchCountry) { %>
        <h5 class="text-center mt-3">
            Showing results for "<%= searchCountry %>"
        </h5>
    <% } %>
    <div id="filters" class="my-3">
        <a href="/listings?category=Mountain<%= searchCountry ? `&country=${searchCountry}` : '' %>" class="btn <%= selectedCategory === 'Mountain' ? 'active' : '' %>">
            <i class="fa-solid fa-mountain"></i>
            <span>Mountain</span>
        </a>
        <a href="/listings?category=Beach<%= searchCountry ? `&country=${searchCountry}` : '' %>" class="btn <%= selectedCategory === 'Beach' ? 'active' : '' %>">
            <i class="fa-solid fa-water"></i>
            <span>Beach</span>
        </a>
        <a href="/listings?category=Arctic<%= searchCountry ? `&country=${searchCountry}` : '' %>" class="btn <%= selectedCategory === 'Arctic' ? 'active' : '' %>">
            <i class="fa-solid fa-snowflake"></i>
            <span>Arctic</span>
        </a>
        <a href="/listings?category=Rooms<%= searchCountry ? `&country=${searchCountry}` : '' %>" class="btn <%= selectedCategory === 'Rooms' ? 'active' : '' %>">
            <i class="fa-solid fa-bed"></i>
            <span>Rooms</span>
        </a>
        <a href="/listings?category=Villa<%= searchCountry ? `&country=${searchCountry}` : '' %>" class="btn <%= selectedCategory === 'Villa' ? 'active' : '' %>">
            <i class="fa-solid fa-building"></i>
            <span>Villa</span>
        </a>
        <a href="/listings?category=Swimming Pool<%= searchCountry ? `&country=${searchCountry}` : '' %>" class="btn <%= selectedCategory === 'Swimming Pool' ? 'active' : '' %>">
            <i class="fa-solid fa-person-swimming"></i>
            <span>Swimming Pool</span>
        </a>
        <a href="/listings?category=Castles<%= searchCountry ? `&country=${searchCountry}` : '' %>" class="btn <%= selectedCategory === 'Castles' ? 'active' : '' %>">
            <i class="fa-solid fa-chess-rook"></i>
            <span>Castles</span>
        </a>
        <a href="/listings?category=Camping<%= searchCountry ? `&country=${searchCountry}` : '' %>" class="btn <%= selectedCategory === 'Camping' ? 'active' : '' %>">
            <i class="fa-solid fa-tent"></i>
            <span>Camping</span>
        </a>
        <a href="/listings?category=Farm<%= searchCountry ? `&country=${searchCountry}` : '' %>" class="btn <%= selectedCategory === 'Farm' ? 'active' : '' %>">
            <i class="fa-solid fa-tractor"></i>
            <span>Farm</span>
        </a>
        <a href="/listings?category=Restaurant<%= searchCountry ? `&country=${searchCountry}` : '' %>" class="btn <%= selectedCategory === 'Restaurant' ? 'active' : '' %>">
            <i class="fa-solid fa-utensils"></i>
            <span>Restaurant</span>
        </a>
        <div class="tax-toggle">
            <div class="form-switch form-check-reverse">
                <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                <label class="form-check-label" for="switchCheckDefault">Display Taxes</label>
            </div>
        </div>
    </div>

    <!-- Listings -->
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-1">
        <% for(let listing of allListing) { %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card col mb-3">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b><%= listing.title %></b> <br>
                            &#8377; <%= listing.price.toLocaleString("en-IN") %> /night
                            <i class="tax-info">&nbsp;&nbsp;+18% GST</i>
                        </p>
                    </div>
                </div>
            </a>
        <% } %>
    </div>

    <script>
        let taxSwitch = document.getElementById("switchCheckDefault");
        taxSwitch.addEventListener("click", () => {
           let taxInfo = document.getElementsByClassName("tax-info");
           for(info of taxInfo) {
            if(info.style.display != "inline") {
                info.style.display = "inline";
            }else {
                info.style.display = "none"
            }
           }
        })
    </script>
</body>
